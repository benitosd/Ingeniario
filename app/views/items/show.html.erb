<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title">
      <%= I18n.t("ingeniario.items.show.title", name: @item.name) %>      </h3>
      <div>
        <%= link_to I18n.t("ingeniario.buttons.edit"), edit_item_path(@item), class: "btn btn-warning me-2" %>
        <%= link_to I18n.t("ingeniario.buttons.back"), items_path, class: "btn btn-secondary" %>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
      
        <!-- Columna Izquierda: InformaciÃ³n del grupo -->
        <div class="col-md-6">
        <div class="col-md-4 text-center">
      <% if @item.photo.attached? %>
        <%= image_tag @item.photo, class: "img-fluid rounded", alt: @item.name %>
      <% else %>
        <%= image_tag "default-item.jpg", class: "img-fluid rounded", alt: "Default photo" %>
      <% end %>
    </div>
          <table class="table table-striped">
            <tbody>
              <tr>
                <th>
                  <%= I18n.t("ingeniario.items.cols.name") %>
                </th>
                <td>
                  <%= @item.name %>
                </td>
              </tr>
              <tr>
                <th>
                  <%= I18n.t("ingeniario.items.cols.description") %>
                </th>
                <td>
                  <%= @item.description %>
                </td>
              </tr>
              <tr>
                <th>
                  <%= I18n.t("ingeniario.items.cols.group_id") %>
                </th>
                <td>
                  <%= @item.group.name %>
                </td>
              </tr>
              <tr>
                <th>
                  <%= I18n.t("ingeniario.groups.cols.family_id") %>
                </th>
                <td>
                  <%= @item.group.family.name %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Columna Derecha: Propiedades del grupo -->
        <div class="col-md-6">
          <h4>Propiedades</h4>
          <% if @item.properties.present? %>
            <ul class="list-group">
              <% @item.properties.each do |key, value| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <strong><%= key.titleize %>:</strong>
                  <span><%= value %></span>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p class="text-muted">No hay propiedades definidas para este grupo.</p>
          <% end %>
        </div>
      </div>

     
    </div>
  </div>
</div>
