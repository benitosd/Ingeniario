<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title mb-0">
      <%= I18n.t("ingeniario.input_report_stocks.list.title") %>
    </h3>
    <%= link_to I18n.t("ingeniario.buttons.new", resource: "Input report stock"), new_input_report_stock_path, class: "btn btn-primary btn-sm" %>
  </div>

  <div class="card-body">
    <!-- Barra de búsqueda -->
    <div class="mb-3">
      <%= render 'layouts/search_order_bar', controller: 'input_report_stocks' %>
    </div>

    <!-- Tabla de datos -->
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
                          <th><%= I18n.t("ingeniario.input_report_stocks.cols.input_report_id") %></th>
                          <th><%= I18n.t("ingeniario.input_report_stocks.cols.stock_id") %></th>
                          <th><%= I18n.t("ingeniario.input_report_stocks.cols.section_id") %></th>
                          <th><%= I18n.t("ingeniario.input_report_stocks.cols.notes") %></th>
                        <th colspan="3" width="10%" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @input_report_stocks.each do |input_report_stock| %>
            <tr>
                              <td><%= input_report_stock.input_report %></td>
                              <td><%= input_report_stock.stock %></td>
                              <td><%= input_report_stock.section %></td>
                              <td><%= input_report_stock.notes %></td>
                            <td class="text-center">
                <%= link_to I18n.t("ingeniario.buttons.show"), input_report_stock, class: "btn btn-success btn-sm" %>
              </td>
              <td class="text-center">
                <%= link_to I18n.t("ingeniario.buttons.edit"), edit_input_report_stock_path(input_report_stock), class: "btn btn-warning btn-sm" %>
              </td>
              <td class="text-center">
                <%= link_to I18n.t("ingeniario.buttons.delete"), input_report_stock, method: :delete, data: { confirm: I18n.t("ingeniario.messages.confirm_delete") }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Paginación -->
    <div class="custom-pagination">
      <%= will_paginate @families, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
