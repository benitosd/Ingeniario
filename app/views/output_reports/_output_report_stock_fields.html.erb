<tr class="nested-fields">
  <td>
    <%= f.select :stock_id, 
        options_from_collection_for_select(@available_stocks, :id, :reference),
        {}, 
        class: "form-select" %>
  </td>
  <td><%= f.object.stock&.item&.name %></td>
  <td><%= f.date_field :return_date, class: "form-control" %></td>
  <td><%= f.text_area :notes, class: "form-control" %></td>
  <td>
    <%= link_to_remove_association f, class: 'btn btn-danger btn-sm' do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>