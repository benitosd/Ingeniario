<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">
        <%= I18n.t("ingeniario.sections.show.title") %>
      </h3>
      <div class="float-end">
        <%= link_to I18n.t("ingeniario.buttons.edit"), edit_section_path(@section), class: "btn btn-warning me-2" %>
        <%= link_to I18n.t("ingeniario.buttons.back"), sections_path, class: "btn btn-secondary" %>
      </div>
    </div>
    <div class="card-body">
      <table class="table table-striped">
        <tbody>
                      <tr>
              <th>
                <%= I18n.t("ingeniario.sections.cols.name") %>
              </th>
              <td>
                <%= @section.name %>
              </td>
            </tr>
                      <tr>
              <th>
                <%= I18n.t("ingeniario.sections.cols.description") %>
              </th>
              <td>
                <%= @section.description %>
              </td>
            </tr>
                      <tr>
              <th>
                <%= I18n.t("ingeniario.sections.cols.warehouse_id") %>
              </th>
              <td>
                <%= @section.warehouse %>
              </td>
            </tr>
                      <tr>
              <th>
                <%= I18n.t("ingeniario.sections.cols.capacity") %>
              </th>
              <td>
                <%= @section.capacity %>
              </td>
            </tr>
                      <tr>
              <th>
                <%= I18n.t("ingeniario.sections.cols.location_code") %>
              </th>
              <td>
                <%= @section.location_code %>
              </td>
            </tr>
                  </tbody>
      </table>
    </div>
  </div>
</div>
