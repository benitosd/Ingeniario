<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title mb-0">
      <%= I18n.t("ingeniario.sections.list.title") %>
    </h3>
    <%= link_to I18n.t("ingeniario.buttons.new", resource: "Section"), new_section_path, class: "btn btn-primary btn-sm" %>
  </div>

  <div class="card-body">
    <!-- Barra de búsqueda -->
    <div class="mb-3">
      <%= render 'layouts/search_order_bar', controller: 'sections' %>
    </div>

    <!-- Tabla de datos -->
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
                          <th><%= I18n.t("ingeniario.sections.cols.name") %></th>
                          <th><%= I18n.t("ingeniario.sections.cols.description") %></th>
                          <th><%= I18n.t("ingeniario.sections.cols.warehouse_id") %></th>
                          <th><%= I18n.t("ingeniario.sections.cols.capacity") %></th>
                          <th><%= I18n.t("ingeniario.sections.cols.location_code") %></th>
                        <th colspan="3" width="10%" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @sections.each do |section| %>
            <tr>
                              <td><%= section.name %></td>
                              <td><%= section.description %></td>
                              <td><%= section.warehouse %></td>
                              <td><%= section.capacity %></td>
                              <td><%= section.location_code %></td>
                            <td class="text-center">
                <%= link_to I18n.t("ingeniario.buttons.show"), section, class: "btn btn-success btn-sm" %>
              </td>
              <td class="text-center">
                <%= link_to I18n.t("ingeniario.buttons.edit"), edit_section_path(section), class: "btn btn-warning btn-sm" %>
              </td>
              <td class="text-center">
                <%= link_to I18n.t("ingeniario.buttons.delete"), section, method: :delete, data: { confirm: I18n.t("ingeniario.messages.confirm_delete") }, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Paginación -->
    <div class="custom-pagination">
      <%= will_paginate @families, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>
