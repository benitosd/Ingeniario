<div class="card">
  <div class="card-header">
    <h5 class="card-title mb-0">Estado de Stocks</h5>
  </div>
  <div class="card-body">
    <div class="chart-container" style="height: 300px;">
      <%= pie_chart({
        "En Almacén" => storage,
        "Asignados" => assigned,
        "En Reparación" => repair,
        "Rotos" => broken,
        "Desaparecidos" => missing
      }, 
      colors: ["#0dcaf0", "#0d6efd", "#ffc107", "#dc3545", "#212529"],
      library: {
        plugins: {
          legend: {
            position: 'right'
          }
        }
      }) %>
    </div>
  </div>
</div>