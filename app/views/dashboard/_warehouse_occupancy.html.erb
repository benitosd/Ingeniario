
<div class="card">
  <div class="card-header">
    <h5 class="card-title mb-0">Top Almacenes por Ocupación</h5>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Almacén</th>
            <th>Items</th>
            <th>Ocupación</th>
          </tr>
        </thead>
        <tbody>
          <% @top_warehouses.each do |warehouse| %>
            <tr>
              <td><%= warehouse.name %></td>
              <td><%= warehouse.items_count %></td>
              <td>
                <% occupation = (warehouse.items_count.to_f / warehouse.sections.sum(:capacity) * 100).round %>
                <div class="progress">
                  <div class="progress-bar <%= occupation > 80 ? 'bg-danger' : 'bg-success' %>" 
                       role="progressbar" 
                       style="width: <%= occupation %>%">
                    <%= occupation %>%
                  </div>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>