<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title mb-0">
      <%= I18n.t("ingeniario.stocks.list.title") %>
    </h3>
    <%= link_to I18n.t("ingeniario.buttons.new", resource: "Stock"), new_stock_path, class: "btn btn-primary btn-sm" %>
  </div>

  <div class="card-body">
    <!-- Barra de búsqueda -->
    <div class="mb-3">
      <%= render 'layouts/search_order_bar', controller: 'stocks' %>
    </div>

    <!-- Tabla de datos -->
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
            <th><%= I18n.t("ingeniario.stocks.cols.reference") %></th>
            <th><%= I18n.t("ingeniario.stocks.cols.item") %></th>
            <th><%= I18n.t("ingeniario.stocks.cols.description") %></th>
            <th><%= I18n.t("ingeniario.stocks.cols.entry_date") %></th>
            <th><%= I18n.t("ingeniario.stocks.cols.active") %></th>
            <th><%= I18n.t("ingeniario.stocks.cols.location") %></th>
            <th colspan="3" width="15%" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @stocks.each do |stock| %>
            <tr>
              <td><%= stock.reference %></td>
              <td><%= stock.item.name %></td>
              <td><%= truncate(stock.description, length: 50) %></td>
              <td><%= l stock.entry_date, format: :long %></td>
              <td>
                <span class="badge <%= stock.active? ? 'bg-success' : 'bg-danger' %>">
                  <%= stock.active? ? 'Activo' : 'Inactivo' %>
                </span>
              </td>
              <td><%= stock.current_location %></td>
              <td class="text-center">
                <%= link_to I18n.t("ingeniario.buttons.show"), stock, class: "btn btn-success btn-sm" %>
              </td>
              <td class="text-center">
                <%= link_to I18n.t("ingeniario.buttons.edit"), edit_stock_path(stock), class: "btn btn-warning btn-sm" %>
              </td>
              <td class="text-center">
                <%= link_to I18n.t("ingeniario.buttons.delete"), stock_path(stock), 
                    data: { 
                      turbo_method: :delete, 
                      turbo_confirm: I18n.t("ingeniario.messages.confirm_delete") 
                    }, 
                    class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Paginación -->
    <div class="custom-pagination">
      <%= will_paginate @stocks, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>