
<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title mb-0">
      <%= I18n.t("ingeniario.families.list.title") %>
    </h3>
    <%= link_to I18n.t("ingeniario.buttons.new", resource: "Family"), new_family_path, class: "btn btn-primary btn-sm" %>
  </div>

  <div class="card-body">
    <!-- Barra de búsqueda -->
    <div class="mb-3">
      <%= render 'layouts/search_order_bar', controller: 'groups' %>
    </div>

    <!-- Tabla de datos -->
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="thead-dark">
          <tr>
                          <th><%= I18n.t("ingeniario.groups.cols.name") %></th>
                          <th><%= I18n.t("ingeniario.groups.cols.description") %></th>
                          
                        <th colspan="3" width="10%" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @families.each do |family| %>
            <tr>
                              <td><%= family.name %></td>
                              <td><%= family.description %></td>
                              
                            <td class="text-center">
                <%= link_to I18n.t("ingeniario.buttons.show"), family, class: "btn btn-success btn-sm" %>
              </td>
              <td class="text-center">
                <%= link_to I18n.t("ingeniario.buttons.edit"), edit_family_path(family), class: "btn btn-warning btn-sm" %>
              </td>
              <td class="text-center">
              <%= link_to I18n.t("ingeniario.buttons.delete"), family_path(family), 
              data: { 
                  turbo_method: :delete, 
                  turbo_confirm: I18n.t("ingeniario.messages.confirm_delete") 
              }, 
              class: "btn btn-danger btn-sm" %>              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Paginación -->
    
    <div class="custom-pagination">
    <%= will_paginate @families, renderer: BootstrapPagination::Rails %>
  </div>
  </div>
</div>
        
      
     