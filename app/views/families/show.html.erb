<div class="container mt-4">
  <!-- Información de la Familia -->
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="card-title">
        <%= I18n.t("ingeniario.families.show.title") %>
      </h3>
      <div>
        <%= link_to I18n.t("ingeniario.buttons.edit"), edit_family_path(@family), class: "btn btn-warning me-2" %>
        <%= link_to I18n.t("ingeniario.buttons.back"), families_path, class: "btn btn-secondary" %>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <!-- Información de la Familia -->
        <div class="col-md-12">
          <table class="table table-striped">
            <tbody>
              <tr>
                <th>
                  <%= I18n.t("ingeniario.groups.cols.name") %>
                </th>
                <td>
                  <%= @family.name %>
                </td>
              </tr>
              <tr>
                <th>
                  <%= I18n.t("ingeniario.groups.cols.description") %>
                </th>
                <td>
                  <%= @family.description %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <!-- Botón para crear un nuevo grupo -->
      <div class="mt-4 text-end">
        <%= link_to I18n.t("ingeniario.buttons.new_group"), new_group_path(family_id: @family.id), class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <!-- Tabla de Grupos Asociados -->
  <div class="card mt-4">
    <div class="card-header">
      <h3 class="card-title">Grupos Asociados</h3>
    </div>
    <div class="card-body">
      <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th><%= I18n.t("ingeniario.groups.cols.name") %></th>
            <th><%= I18n.t("ingeniario.groups.cols.description") %></th>
            <th><%= I18n.t("ingeniario.groups.cols.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% if @family.groups.any? %>
            <% @family.groups.each do |group| %>
              <tr>
                <td><%= group.name %></td>
                <td><%= group.description %></td>
                <td>
                  <%= link_to I18n.t("ingeniario.buttons.show"), group_path(group), class: "btn btn-info btn-sm me-2" %>
                  <%= link_to I18n.t("ingeniario.buttons.edit"), edit_group_path(group), class: "btn btn-warning btn-sm me-2" %>
                  <%= link_to I18n.t("ingeniario.buttons.delete"), group_path(group), 
                  data: { 
                      turbo_method: :delete, 
                      turbo_confirm: I18n.t("ingeniario.messages.confirm_delete") 
                  }, 
                  class: "btn btn-danger btn-sm" %>    
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="3" class="text-center">
                <%= I18n.t("ingeniario.messages.no_groups") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>