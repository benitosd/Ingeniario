<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title">
      <%= @warehouse.new_record? ? I18n.t("ingeniario.warehouses.new") : I18n.t("ingeniario.warehouses.edit") %>
    </h3>
    <div>
      <%= link_to I18n.t("ingeniario.buttons.back"), warehouses_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="card-body">
    <%= form_with(model: @warehouse, local: true) do |form| %>
      <% if @warehouse.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@warehouse.errors.count, "error") %> prohibited this warehouse from being saved:</h4>
          <ul>
            <% @warehouse.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <!-- Nombre -->
        <div class="col-md-6 mb-3">
          <%= form.label :name, I18n.t("ingeniario.warehouses.cols.name"), class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <!-- Ubicación -->
        <div class="col-md-6 mb-3">
          <%= form.label :location, I18n.t("ingeniario.warehouses.cols.location"), class: "form-label" %>
          <%= form.text_field :location, class: "form-control" %>
        </div>

        <!-- Descripción -->
        <div class="col-12 mb-3">
          <%= form.label :description, I18n.t("ingeniario.warehouses.cols.description"), class: "form-label" %>
          <%= form.text_area :description, class: "form-control" %>
        </div>

        <!-- Información de contacto -->
        <div class="col-12 mb-3">
          <%= form.label :contact_info, I18n.t("ingeniario.warehouses.cols.contact_info"), class: "form-label" %>
          <%= form.text_field :contact_info, class: "form-control" %>
        </div>

        <div class="col-12 mb-3">
          <%= form.label :image, I18n.t("ingeniario.warehouses.cols.image"), class: "form-label" %>
          <%= form.file_field :image, class: "form-control", accept: "image/*" %>
          <% if @warehouse.persisted? && @warehouse.image.attached? %>
            <div class="mt-2">
              <%= image_tag @warehouse.image, class: "img-thumbnail", style: "max-height: 200px" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Submit button -->
      <div class="d-grid mt-4">
        <%= form.submit I18n.t("ingeniario.buttons.save"), class: "btn btn-primary" %>
        <%= link_to I18n.t("ingeniario.buttons.cancel"), warehouses_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>